<h1>Usu√°rios Cadastros:</h1>
<div class='container'>
  {{#each users}}
    <div class='item'>
      <h2>
        {{this.name}}
      </h2>
      <p>
        {{this.occupation}}
      </p>
      <div class='actions'>
        <div>
          <a href='/users/{{this.id}}'>Ver detalhes</a>
          <a href='/users/edit/{{this.id}}'>Editar</a>
        </div>
        <form action='/users/delete/{{this.id}}' method='POST'>
          <input type='submit' value='Deletar' class='delete-btn' />
        </form>
      </div>
    </div>
  {{/each}}
</div>