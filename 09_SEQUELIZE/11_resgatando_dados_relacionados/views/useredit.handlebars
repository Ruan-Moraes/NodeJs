<h1>Editando usuário: {{user.name}}</h1>
<form action='/users/update' method='POST' class='form'>
  <input type='hidden' name='id' value='{{user.id}}' />
  <div class='form-control'>
    <label for='name'>Nome</label>
    <input
      type='text'
      name='name'
      id='name'
      required
      placeholder='Digite o nome de usuário'
      value='{{user.name}}'
    />
  </div>
  <div class='form-control'>
    <label for='occupation'>Ocupação do usuário</label>
    <input
      type='text'
      name='occupation'
      id='occupation'
      required
      placeholder='Digite a ocupação do usuário'
      value='{{user.ocuppation}}'
    />
  </div>
  <div class='form-checkbox'>
    {{#if user.newsletter}}
      <input type='checkbox' name='newsletter' checked />
    {{else}}
      <input type='checkbox' name='newsletter' />
    {{/if}}
    <label for='newsletter'>Enviar Promoções</label>
  </div>
  <input type='submit' value='Editar' />
</form>
<div class='address-container'>
  <h2>Endereços</h2>
  <form action='/address/create' method='POST'>
    <input type='hidden' name='UserId' value='{{user.id}}' />
    <div class='form-control'>
      <label for='street'>Rua:</label>
      <input
        type='text'
        name='street'
        id='street'
        required
        placeholder='Digite a rua'
      />
    </div>
    <div class='form-control'>
      <label for='number'>Número:</label>
      <input
        type='text'
        name='number'
        id='number'
        required
        placeholder='Digite o número'
      />
    </div>
    <div class='form-control'>
      <label for='city'>Cidade:</label>
      <input
        type='text'
        name='city'
        id='city'
        required
        placeholder='Digite a cidade'
      />
    </div>
    <input type='submit' value='Incluir Endereço' />
  </form>
  <div class='address-list'>
    <h2>Lista de endereços:</h2>
    {{#each user.Addresses}}
      <p>{{this.id}}, {{this.street}}, {{this.number}} - {{this.city}}</p>
    {{/each}}
  </div>
</div>