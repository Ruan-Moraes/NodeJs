<h1>
  Editar Livro
</h1>
<form action='' method='POST'>
  <div class='form-control'>
    <label for='title'>
      Título:
    </label>
    <input
      type='text'
      name='title'
      id='title'
      placeholder='Digite o título'
      value='{{book.title}}'
    />
  </div>
  <div class='form-control'>
    <label for='pagegty'>
      Páginas:
    </label>
    <input
      type='number'
      name='pageqty'
      id='pageqty'
      placeholder='Digite a quantidade de páginas'
      value='{{book.pageqty}}'
    />
  </div>

  <input type='submit' value='Editar' />
</form>